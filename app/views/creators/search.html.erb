<h2 class="sub-title">製作者の検索結果</h2>

<%= render partial: "search_form" %>
<div class="result-count"><%= @creators.count %>件の検索結果</div>

<div class="creators-list-container">
  <% if @creators.present? %>

      <div class="creators-list">
        <%= render partial: "creator", collection: @creators %>
      </div>
    
  <% else %>
    <div class="message">検索結果はありません</div>
  <% end %>
</div>