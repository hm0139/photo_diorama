<% if !commission.directly %>
  <div class="request-item">
    <div class="request-item-left">
      <div class="request-item-upper">
        <div class="request-title">
          <%= link_to commission.title, commission_path(commission) %>
        </div>
      </div>
      <div class="request-item-lower">
        <div class="user-name">
          <%= commission.user.user_name %>
        </div>
      </div>
    </div>
    <div class="request-right">
      <div class="reqard">
        <span class="reward-item-name">報酬</span> : <span class="reward-price"><%= commission.reward %>円</span>
      </div>
    </div>
  </div>
<% end %>